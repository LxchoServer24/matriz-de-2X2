//arreglos bidimencionales(matrices)
//hacer la suma y resta de matrices
#include<stdio.h>
#include<stdlib.h>
int main(){
	int a[2][2]={{1,2},{3,4}};
	int b[2][2]={{5,6},{7,8}};
	int c;//[2][2]={{0,0},{0,0}};
	//comprobar matriz para imprimir
	printf("matriz a\n");
	for(int i=0;i<2;i++){
		for(int j=0;j<2;j++){
			printf("[%i]",a[i][j]);
		}
		printf("\n");
	}
	printf("\n-------------------------\n");
	printf("matriz b\n");
	for(int i=0;i<2;i++){
		for(int j=0;j<2;j++){
			printf("[%i]",b[i][j]);
		}
		printf("\n");
	}
	printf("\n---------------------\n");
	printf("matriz sumada\n");
		for(int i=0;i<2;i++){
			for(int j=0;j<2;j++){
				printf("[%i]",a[i][j]+b[i][j]);
			}
			printf("\n");
		}
	printf("\n---------------------------\n");	
	printf("matriz restada\n");
	    for(int i=0;i<2;i++){
	    	for(int j=0;j<2;j++){
	    		printf("[%i]",a[i][j]-b[i][j]);
			}
			printf("\n");
		}	
	return 0;	
	}
